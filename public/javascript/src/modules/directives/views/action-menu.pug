include ../../views/_auto-generated/_-all
md-bottom-sheet.md-grid(layout='column')
    div(ng-cloak)
        md-list(flex, layout='row', layout-align='center center')
            md-list-item(ng-repeat="action in actionMenu.actions")
                div
                    md-button.md-grid-item-content.action.action--bottommenu(ng-click="action.onClick(); closeBottomSheet();")
                        md-icon.material-icons {{action.icon}}
                        .md-grid-text {{action.label}}

